{
  "name": "socket-server",
  "version": "0.1.0",
  "description": "Socket server for stupid game",
  "main": "dist/start.js",
  "scripts": {
    "lint": "tslint --project tslint.json",
    "lint:fix": "tslint --project tslint.json --fix",
    "watch": "concurrently --kill-others \"npm run watch:ts\" \"npm run watch:serve\"",
    "watch:serve": "nodemon --watch dist dist/start -e js",
    "watch:ts": "tsc --watch",
    "test": "npm run test:functional",
    "test:functional": "jest --config=tests/functional/jest.config.js",
    "test:functional:watch": "jest --config=tests/functional/jest.config.js --watchAll"
  },
  "keywords": [
    "socket",
    "server"
  ],
  "author": "monty dawson <hello@montydawson.co.uk>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "@types/pino": "^5.8.3",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "socket.io-client": "^2.2.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "pino": "^5.10.6",
    "socket.io": "^2.2.0"
  }
}
